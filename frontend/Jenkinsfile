pipeline {
  agent any

  tools {
    nodejs 'node18'
  }

  environment {
    AWS_REGION = "ap-south-1"
    S3_BUCKET  = "pricedropper-frontend-bucket-30-1-2026"
    VITE_API_URL = "https://api.pricedrop24.shop"
  }

  stages {

    stage('Checkout Code') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }

    stage('Upload to S3') {
      steps {
        dir('frontend') {
          sh '''
            aws s3 sync dist/ s3://$S3_BUCKET --delete
          '''
        }
      }
    }
  }

  post {
    success {
      echo "✅ Frontend deployed successfully to S3"
    }
    failure {
      echo "❌ Frontend deployment failed"
    }
  }
}
